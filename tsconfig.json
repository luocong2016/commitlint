{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noImplicitThis": true,
    "types": ["vue/jsx"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
